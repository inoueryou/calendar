<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <h1 class="well well-sm col-xs-3 text-center">カレンダー</h1>
  </div>

  <div class="table-responsive">
    <table class="table">
      <thead>
        <tr>
          <th>タイトル</th>
          <th>詳細</th>
          <th>開始日時</th>
          <th>終了日時</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @events.each do |event| %>
          <tr>
            <td><%= event.title %></td>
            <td><%= event.body %></td>
            <td><%= event.start_date %></td>
            <td><%= event.end_date %></td>
            <td><%= link_to '表示', event, class: "btn btn-info" %></td>
            <td><%= link_to '編集', edit_event_path(event), class: "btn btn-primary" %></td>
            <td><%= link_to '削除', event, method: :delete, data: { confirm: '本当に削除していいですか?' }, class: "btn btn-danger" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
  <%= link_to 'スケジュールを登録する', new_event_path, class: "btn btn-success btn-lg" %>
  <br>
   <div id="calendar"></div>
</div>
